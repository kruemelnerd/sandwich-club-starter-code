<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/also_known_label"
            style="@style/detailHeadline"
            android:text="@string/detail_also_known_as_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_iv" />

        <TextView
            android:id="@+id/also_known_tv"
            style="@style/detailTextview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/also_known_label"
            app:layout_goneMarginTop="0dp"
            tools:text="ALSO KNOWN AS" />


        <TextView
            android:id="@+id/origin_label"
            style="@style/detailHeadline"
            android:text="@string/detail_place_of_origin_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/also_known_tv"
            app:layout_goneMarginTop="10dp" />


        <TextView
            android:id="@+id/origin_tv"
            style="@style/detailTextview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/origin_label"
            app:layout_goneMarginTop="10dp"
            tools:text="Origin Text" />


        <TextView
            android:id="@+id/description_label"
            style="@style/detailHeadline"
            android:text="@string/detail_description_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/origin_tv"
            app:layout_goneMarginTop="10dp" />


        <TextView
            android:id="@+id/description_tv"
            style="@style/detailTextview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_label"
            app:layout_goneMarginTop="10dp"
            tools:text="Long Description Long Description Long Description Long Description Long Description Long Description Long Description Long Description Long Description Long Description Long Description " />


        <TextView
            android:id="@+id/ingredients_label"
            style="@style/detailHeadline"
            android:text="@string/detail_ingredients_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_tv"
            app:layout_goneMarginTop="10dp" />

        <TextView
            android:id="@+id/ingredients_tv"
            style="@style/detailTextview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ingredients_label"
            app:layout_goneMarginTop="10dp"
            tools:text="List of ingredients" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>
